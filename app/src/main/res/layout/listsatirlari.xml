<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imgLstResim"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/txtLstUrunBilgisi"
        android:layout_width="201dp"
        android:layout_height="73dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/imgLstResim"
        android:text="TextView"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/imgLstResim"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtLstUrunFiyati"
        android:layout_width="82dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@+id/txtLstUrunBilgisi"
        tools:layout_editor_absoluteY="8dp" />
</android.support.constraint.ConstraintLayout>
