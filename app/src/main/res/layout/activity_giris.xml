<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.emre.yemek.UrunDetay">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="GİRİŞ YAP"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/txtgmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:ems="10"
        android:hint="Mail Adresi"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/txtgParola"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtgmail"
        android:layout_below="@+id/txtgmail"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Parola"
        android:inputType="textPersonName"
        android:password="true" />

    <Button
        android:id="@+id/btnGiris"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtgParola"
        android:layout_centerVertical="true"
        android:text="GİRİŞ" />
</RelativeLayout>
